version: "3.9"

networks:
  app-network:
    driver: bridge
    name: app-network

services:
  frontend:
    image: {{ ecr_frontend_image }}
    container_name: frontend
    networks:
      - app-network
    expose:
      - "80"   # internal only, not exposed to host

  nginx:
    image: nginx:latest
    container_name: nginx-reverse-proxy
    ports:
      - "80:80"
    volumes:
      - ./nginx.conf:/etc/nginx/nginx.conf:ro
    depends_on:
      - frontend
    networks:
      - app-network
